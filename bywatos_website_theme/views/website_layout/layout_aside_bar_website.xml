<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="layout_aside_bar" name="Layout Aside bar Website">
        <!--Sidebar-->
        <aside id="sidebar" class="sidebar_hide">
            <div id="sidebar-trigger">
                <div id="sidebar-icon" class="menu-icon">
                    <img src="/bywatos_website_theme/static/src/img/svg/burger-bw.svg"
                         alt="Burger menu"
                         class="burger-img" style="color: green;"/>
                </div>
            </div>
            <!--End sidebar-trigger-->
            <div class="sidebar-main">

                <div id="hot-close-sidebar" class="menu-icon" style="navi_wrapdisplay: none; color: red;">
                    <img src="/bywatos_website_theme/static/src/img/svg/cross_1.svg" class="burger-img" />
                </div>

                <!--Logo-->
                <div id="logo">
                    <a href="/" title="Aside Responsive HTML Theme">
                        <img src="/bywatos_website_theme/static/src/img/svg/logo-bw.svg"
                             class="img-responsive header-logo"/>
                    </a>
                </div>

                <!--Menu-->
                <nav id="navi" class="clearfix">
                    <div id="navi_wrap" class="menu-demo-menu-container">
                        <ul class="menu">
                            <li id="menu-item-homepage" class="menu-item menu-item-type-post_type menu-item-object-page">
                                <a href="/">Home</a>
                            </li>
                            <li id="menu-item-portfolio" class="menu-item menu-item-type-custom menu-item-object-custom">
                                <a href="/portfolio">Portfolio</a>
                            </li>
                            <li id="menu-item-workshop" class="menu-item menu-item-type-post_type menu-item-object-page">
                                <a href="#">Atelier</a>
                            </li>
                            <li id="menu-item-contact-us" class="menu-item menu-item-type-custom menu-item-object-custom">
                                <a href="/contact-us">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <!--End #navi_wrap-->
                </nav>

                <!--<div class="sidebar-wrap">-->

                <!--</div>-->
                <img src="/bywatos_website_theme/static/src/img/svg/logo-artisanat.svg" class="logo-artisanat" alt="Logo artisanat"/>

                <!-- End Menu -->
                <div class="sidebar-bottom-wrap">
                    <!--Social icons-->
                    <div class="social-icons-sidebar">
                        <a class="icons-sidebar-unit" t-if="website.social_facebook" t-att-href="website.social_facebook">
                            <i class="fa fa-facebook-square"/>
                        </a>
                        <a class="icons-sidebar-unit" t-if="website.social_twitter" t-att-href="website.social_twitter">
                            <i class="fa fa-twitter-square"/>
                        </a>
                        <a class="icons-sidebar-unit" t-if="website.social_linkedin" t-att-href="website.social_linkedin">
                            <i class="fa fa-linkedin-square"/>
                        </a>
                        <a class="icons-sidebar-unit" t-if="website.social_youtube" t-att-href="website.social_youtube">
                            <i class="fa fa-youtube-square"/>
                        </a>
                        <a class="icons-sidebar-unit" t-if="website.social_googleplus" t-att-href="website.social_googleplus">
                            <i class="fa fa-google-plus-square"/>
                        </a>
                        <a class="icons-sidebar-unit" t-if="website.social_instagram" t-att-href="website.social_instagram">
                            <i class="fa fa-instagram"/>
                        </a>
                    </div>

                    <div class="copyright">Conception et fabrication de mobilier Ã  Lyon</div>

                    <!--Copyright-->
                    <div class="copyright">Copyright ByWatos</div>

                    <!--End copyright-->
                </div>
                <!--END sidebar-bottom-wrap-->
            </div>
            <!--end sidebar-main-->
        </aside>
    </template>
</odoo>