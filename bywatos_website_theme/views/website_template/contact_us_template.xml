<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="assets_frontend_contact_us" inherit_id="website.assets_frontend" name="contact_us">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/bywatos_website_theme/static/src/less/contact_us.less"></link>
        </xpath>
    </template>

    <template id="contact_us_template" name="ByWatos Contact-us Template">
        <t t-call="website.layout">
            <div id="contact-us">
                <div id="wrap">
                    <!-- Header template -->
                    <t t-call="bywatos_website_theme.layout_aside_bar"/>

                    <!-- Fixed background  -->
                    <div class="cd-fixed-bg cd-fixed-bg--contact-us">
                        <div class="container">
                            <div class="row">
                                <div class="form-group">

                                    <label for="nameFormControlInput">Nom*</label>
                                    <input type="text" class="form-control" id="nameFormControlInput" />

                                    <label for="emailFormControlInput">Email*</label>
                                    <input type="email" class="form-control" id="emailFormControlInput" />

                                    <label for="messageTextArea">Message*</label>
                                    <textarea class="form-control" id="messageTextArea" rows="3"></textarea>

                                    <div class="input-item">
                                        <button type="submit" class="btn btn-primary">Envoyer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- cd-fixed-bg -->

                    <!-- Float bar -->
                    <t t-call="bywatos_website_theme.float_bar_social_network" />
                    <!--End #float bar-->
                </div>
            </div>
        </t>
    </template>
</odoo>