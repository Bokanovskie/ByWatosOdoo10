<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="assets_frontend_homepage" inherit_id="website.assets_frontend" name="By Watos css homepage">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text" href="/bywatos_website/static/src/css/homepage.css"/>
        </xpath>
    </template>

    <template id="homepage_template" name="Home page template">
        <t t-call="website.layout">

            <!-- Call bywatos header template -->
            <t t-call="bywatos_website.bywatos_header_website_template"/>

            <section id="page2">
                <div class="square-container">
                    <img src="/bywatos_website/static/src/img/lampe_mel_halo.jpg" class="page-two-img"/>
                </div>

                <div class="square-container presentation-container">
                    <h1>L'acier sur mesure</h1>
                    <p>
                        Née d'une passion pour l'acier. Diplôme de métallier en poche, je me passione pour la transformation et le réalisation d'objet sur mesure unique.
                        Mon imagination et mon savoir faire dans la conception de design d'intérieur.
                    </p>
                </div>
            </section>

            <section id="page3">
                <div class="square-container">
                     <img src="/bywatos_website/static/src/img/lampe_molniya.JPG" class="page-three-img"/>
                </div>

                <div class="square-container">
                     <iframe src="https://www.youtube.com/embed/lYaY8nL2340" class="youtube-iframe"/>
                </div>

            </section>

            <!-- Call bywatos footer template -->
            <t t-call="bywatos_website.bywatos_footer_website_template"/>

        </t>
    </template>
</odoo>